<h1 class="text-3xl font-bold text-center my-6">Add a New Book</h1>

<div class="max-w-md mx-auto bg-white shadow-md rounded-lg p-6">
  <%= form_with model: @book, url: books_path, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :title, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :title, class: "mt-1 block w-full border border-gray-300 rounded-md p-2" %>
    </div>

    <div>
      <%= f.label :author, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :author, class: "mt-1 block w-full border border-gray-300 rounded-md p-2" %>
    </div>

    <div>
      <%= f.label :status, class: "block text-sm font-medium text-gray-700" %>
      <%= f.select :status, ['Available', 'Borrowed'], class: "mt-1 block w-full border border-gray-300 rounded-md p-2" %>
    </div>


    <div class="text-center">
      <%= f.submit "Create Book", class: "bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>