<div class="min-h-screen bg-gray-100 flex flex-col items-center justify-center p-6">
  <h1 class="text-3xl font-extrabold text-center text-blue-700 mb-6">✏ Edit Book</h1>

  <div class="bg-white p-8 shadow-lg rounded-lg w-full max-w-md">
    <%= form_with model: @book, local: true, class: "space-y-6" do |f| %>
      
      <!-- Title Input -->
      <div>
        <%= f.label :title, "Book Title", class: "block text-sm font-semibold text-gray-700" %>
        <%= f.text_field :title, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-gray-900" %>
      </div>

      <!-- Author Input -->
      <div>
        <%= f.label :author, "Author Name", class: "block text-sm font-semibold text-gray-700" %>
        <%= f.text_field :author, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-gray-900" %>
      </div>

      <!-- Status Dropdown -->
      <div>
        <%= f.label :status, "Book Status", class: "block text-sm font-semibold text-gray-700" %>
        <%= f.select :status, ['Available', 'Borrowed'], {}, class: "mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm focus:ring-indigo-500 focus:border-indigo-500 text-gray-900" %>
      </div>

      <!-- Update Button -->
      <div class="flex justify-center">
        <%= f.submit "✅ Update Book", class: "w-full bg-indigo-600 text-white py-2 px-4 rounded-lg shadow-md hover:bg-indigo-700 text-lg font-semibold transition-all" %>
      </div>

    <% end %>
  </div>

  <!-- Back to Books Link -->
  <div class="mt-6">
    <%= link_to "⬅ Back to Books", books_path, class: "text-blue-500 hover:underline text-lg font-medium" %>
  </div>
</div>